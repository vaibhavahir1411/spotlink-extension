{
  "manifest_version": 3,
  "name": "ShortLink",
  "version": "1.0",
  "action": {
    "default_popup": "popup.html"
  },
  "permissions": [
    "storage",
    "tabs"
  ],
  "host_permissions": [
    "https://spotlink.cc/*"
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "shortlink@example.com",
      "strict_min_version": "109.0"
    }
  }
}